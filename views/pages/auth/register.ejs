<% if (errors) { %>
  <div class="alert alert-danger">
    <div class=" container">
      Formularz zawiera błędy!
    </div>
  </div>
<% } %>
<div class="container mt-0 p-5">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card border-0 shadow-sm rounded-3 bg-white">
        <div class="card-body p-4 p-sm-5">
          <h1 class="card-title text-center mb-5 fw-normal fs-3">Rejestracja</h1>

          <form method="POST">
            <div class="form-floating mb-3">
              <input type="email" class="form-control bg-light <%- errors?.email ? 'is-invalid' : '' %>" name="email" id="email" value="<%= form.email %>" placeholder="Email" required>
              <label for="email">Email</label>
              <% if (errors?.email) { %>
                <div class="invalid-feedback"><%= errors['email'].properties.message %></div>
              <% } %>
            </div>
            <div class="form-floating mb-3">
              <input type="password" class="form-control bg-light <%- errors?.password ? 'is-invalid' : '' %>" name="password" id="password" placeholder="Hasło" value="<%= form.password %>" required>
              <label for="password">Hasło</label>
              <% if (errors?.password) { %>
                <div class="invalid-feedback"><%= errors['password'].properties.message %></div>
              <% } %>
            </div>

            <div class="d-grid my-3">
                <button type="submit" class="btn btn-secondary btn-login text-uppercase fw-bold py-3">Zarejestruj</button>
            </div>
            <hr class="my-4">
            <a href="/zaloguj" class="text-center mx-auto d-block">Mam już konto</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
  
</div> <!-- container -->