<div class="container mt-0 p-5">
    <div class="row">
      <div class="col-sm-12 col-md-10 col-lg-12 mx-auto">
        <div class="card border-0 shadow-sm rounded-3 bg-white">
          <div class="card-body p-4">
            <div class="d-flex w-100 align-items-center justify-content-between">
              <a href="/lekcje" type="button" class="btn d-flex flex-row align-items-center px-4 border" style="font-size: 20px;"><i class="bi bi-arrow-left"></i></a>
              <h1 class="h1 px-4"><%= lesson.name %></h1>
              <span class="lead">Lekcja</span>
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center my-4 w-50">
              <a href="/lekcje/<%= lesson.slug %>/fiszki" type="button" class="btn btn-secondary me-4">
                Ćwicz metodą: <i class="bi bi-card-text mx-2"></i>Fiszki
              </a>
              <a href="/lekcje/<%= lesson.slug %>/qwerty" type="button" class="btn btn-secondary me-4">
                Ćwicz metodą: <i class="bi bi-keyboard mx-2"></i>Qwerty
              </a>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <div class="card">
                  <div class="card-body shadow-sm">
                    <table class="table text-center">
                      <thead>
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Po angielsku</th>
                          <th scope="col">Po polsku</th>
                        </tr>
                      </thead>
                      <tbody>
                          <% wordlist.forEach(function (word, i) { %>
                          <tr>
                            <th scope="row"><%= i+1 %>.</th>
                            <td><%= word.name_en %></td>
                            <td><%= word.name_pl %></td>
                          </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 px-5">
                  <div class="card border-0 px-5">
                    <div class="card-body mt-0 pt-0">
                      <img src="/img/images/<%= lesson.img_url %>" class="card-img-top" alt="<%= lesson.name %>">
                      <a href="/lekcje/<%= lesson.slug %>/sprawdzian" type="button" class="my-4 btn btn-secondary mx-auto d-block">
                        <i class="bi bi-book me-2"></i>Zdaj sprawdzian z lekcji "<%= lesson.name %>"
                      </a>
                      <!-- <p class="text-success">Zdałeś już test z tej lekcji.</p> -->
                    </div>
                  </div>
                </div>
            </div>
  
          </div>
        </div>
      </div>
    </div>
  </div>