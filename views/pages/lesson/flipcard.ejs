<style>

    .contentFlex {
      display: flex;
      justify-content: center;
      align-items: center;
    }
  
    .flipcard {
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      min-width: 30vw;
      max-width: 40vw;
      min-height: 20vh;
      aspect-ratio: 10 / 5; /* ‚ÜîÔ∏è is double the ‚ÜïÔ∏è */
      perspective: 1000px;
      box-shadow: 0;
    }
  
    /* .flipcard:hover .flipcard__inner {
      transform: rotateY(-180deg);
    } */
  
    .flip{
      transform: rotateY(-180deg);
    }
  
    .flipcard__inner {
      position: relative;
      width: 100%;
      height: 100%;
      transform-style: preserve-3d;
      transition: all 0.8s ease;
    }
  
    .flipcard__front,
    .flipcard__back {
      position: absolute;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      -webkit-backface-visibility: hidden;
      backface-visibility: hidden;
      overflow: hidden;
    }
  
    .flipcard__front {
      z-index: 1;
      flex-flow: column;
    }
  
    .flipcard__back {
      flex-flow: column;
      transform: rotateY(-180deg);
      z-index: 2;
    }
  
    .flipcard p {
      font-size: 2.5rem;
      margin: 0;
    }
  
  </style>
  
