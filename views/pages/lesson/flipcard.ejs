  <script>
  
    const flipBtn = document.getElementById('flip-btn');
    const flipcard = document.querySelector('.flipcard__inner');
    
    function flip() {
      flipcard.classList.toggle("flip");  
    };
  
    flipBtn.addEventListener('click', () => {
      flip();
  
    });
  
    document.body.onkeydown = function(e){
      if(e.keyCode == 32){
        flip();
      }
    }
  
